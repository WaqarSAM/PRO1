
@{
    ViewData["Title"] = "AddStudent";
}
@model Student
<h2>AddStudent</h2>

@{
    if (ViewBag.Message != null)
    {
        <h2 class="alert alert-success"><span class="glyphicon glyphicon-ok"></span>@ViewBag.Message</h2>
    }
}

<form asp-controller="student" asp-action="AddStudent" method="post">
    <div class="form-group">
        <label for="name">Name:</label>
        <input type="text" asp-for="Name" class="form-control" id="name">
    </div>
    <div class="form-group">
        <label for="class">Class:</label>
        <input type="text" asp-for="Class" class="form-control" id="class">
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-success">Preview</button>
        <a href="/student/AllStudents" class="btn btn-warning">All Students</a>
    </div>
</form>


